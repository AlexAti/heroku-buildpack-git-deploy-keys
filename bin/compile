#!/usr/bin/env ruby

require 'fileutils'

build_dir    = ARGV[0]
cache_dir    = ARGV[1]
env_dir      = ARGV[2]

def putter(arg)
  puts "############################################"
  puts arg
end

puts "############################################"
puts "############################################"
puts "          GIT DELOY KEY BUILDPACK           "
puts "############################################"
puts "############################################"

key_file_path = File.join env_dir, 'GITHUB_DEPLOY_KEY'

putter key_file_path

ssh_key = File.open(key_file_path, &:read) if File.exist? key_file_path

putter ssh_key

if ssh_key.nil?
  puts "       !!!! GITHUB_DEDLOY_KEY not set"
  puts "       !!!!   Try `heroku config:add GITHUB_DEPLOY_KEY=<my token>`"
  exit 1
end


# make ~/.ssh unless exists
Dir.mkdir("#{ENV['HOME']}/.ssh") unless Dir.exist? "#{ENV['HOME']}/.ssh"

# Create the key
File.open "#{ENV['HOME']}/.ssh/github_deploy_key", "w" do |f|
  f.puts "----BEGIN RSA PRIVATE KEY-----"
  f.puts ""

  ssh_key.scan(/.{,64}/).reject(&:blank?).each do |l|
    f.puts l
  end

  f.puts ""
  f.puts "-----END RSA PRIVATE KEY-----"
end

puts "############################### FILE IS"
putter File.read "#{ENV['HOME']}/.ssh/github_deploy_key"

# Update the config
File.open "#{ENV['HOME']}/.ssh/config", "w" do |f|
  f.puts "\n"
  f.puts "host github.com"
  f.puts "    user git"
  f.puts "    IdentityFile ~/.ssh/github_deploy_key"
  f.puts "\n"
end


puts "############################### CONFIG IS"
putter File.read "#{ENV['HOME']}/.ssh/config"
